<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Category Name"
        android:layout_margin="8dp"
        android:paddingLeft="8dp"
        style="?android:attr/editTextStyle"
        android:id="@+id/categoryNameEditText"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grade Type:"
        android:textStyle="bold"
        android:padding="4dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/categoryNameEditText"
        android:id="@+id/gradeTypeTV"
        style="@style/TextAppearance.AppCompat.Subhead"
        />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:padding="12dp"
        android:id="@+id/addSubjectSpinner"
        android:layout_below="@id/gradeTypeTV"
        style="@style/Widget.AppCompat.Spinner.Underlined">
    </Spinner>

    <Button
        android:layout_width="wrap_content"
        android:minWidth="64dp"
        android:layout_height="48dp"

        android:padding="8dp"

        android:gravity="center"
        android:layout_below="@id/addSubjectSpinner"
        android:layout_alignParentRight="true"

        android:text="OK"
        android:id="@+id/categoryDialogOkButton"
        style="?android:attr/buttonBarButtonStyle"
        />

    <Button
        android:layout_width="wrap_content"
        android:minWidth="64dp"
        android:layout_height="48dp"

        android:padding="8dp"

        android:gravity="center"
        android:layout_below="@id/addSubjectSpinner"
        android:layout_toLeftOf="@id/categoryDialogOkButton"

        android:text="Cancel"
        android:id="@+id/categoryDialogCancelButton"
        style="?android:attr/buttonBarButtonStyle"
        />

</RelativeLayout>