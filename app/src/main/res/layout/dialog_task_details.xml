<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="2"
            android:background="@color/dark"
            android:layout_below="@+id/rl_time_date">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tv_name"
                android:layout_weight="1"
                android:textSize="16sp"
                android:layout_margin="18dp"
                android:text="Name Name Name Name Name Name Name Name Name"
                android:layout_marginBottom="2dp"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tv_body"
                android:layout_weight="1"
                android:textSize="14sp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="18dp"
                android:text="Body Body Body Body Body Body Body Body Body Body Body"
                android:layout_marginTop="2dp"
                android:textColor="@color/white"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_time_date"
            android:background="@color/sexyTurqiousee">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:id="@+id/iv_time"
                android:background="@drawable/ic_clock_white"
                android:layout_toLeftOf="@+id/tv_time_date"
                android:layout_marginRight="8dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_time_date"
                android:textSize="13sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="Monday 26.11.2016"
                android:textColor="@color/white"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"/>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>