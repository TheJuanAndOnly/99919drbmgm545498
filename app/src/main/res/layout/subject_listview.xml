<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/darkbluebackground"
    android:paddingRight="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:background="@drawable/dot1"
            android:id="@+id/leftTV">
        </ImageView>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_trending_up_white_24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/arrow"/>

        <TextView
            android:id="@+id/subjectLVAverageText"
            android:text="0.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="75dp"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/arrow"
            android:textAlignment="center"
            android:minHeight="5dp"
            android:textColor="@color/greyText"
            android:textSize="23sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:paddingLeft="20dp"
            android:paddingRight="17dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/subjectLVAverageText">

            <TextView
                android:id="@+id/subjectName"
                android:text="Subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:gravity="center_vertical"
                android:background="@android:color/transparent"
                android:minHeight="5dp"
                android:textColor="@color/greyText"
                android:textSize="23sp"/>

            <TextView
                android:id="@+id/goodJobTv"
                android:text="Good job!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:gravity="center_vertical"
                android:background="@android:color/transparent"
                android:textColor="@color/greyText"
                android:textSize="14sp"/>

        </LinearLayout>

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/mainblue"
            android:id="@+id/separatorLV"
            android:layout_toLeftOf="@id/subjectLVAverageText"/>

    </RelativeLayout>

</LinearLayout>