<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkbluebackground"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="5dp"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:padding="8dp"
        android:gravity="left"
        android:text="Category"
        android:background="@android:color/transparent"
        android:textColor="@color/greyText"
        android:textSize="16sp"
        android:textStyle="bold"
        android:id="@+id/categoryTextView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="5dp"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:padding="8dp"
        android:layout_toRightOf="@id/categoryTextView"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:gravity="center"
        android:background="@android:color/transparent"
        android:textColor="@color/greyText"
        android:textSize="16sp"
        android:text="-"
        android:id="@+id/dashTextView"/>

    <Button
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_delete_white_24dp"
        android:id="@+id/gradeDeleteButton"
        android:onClick="deleteCategory"
        android:visibility="gone"/>

    <Button
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@id/gradeDeleteButton"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_mode_edit_white_24dp"
        android:id="@+id/gradeEditButton"
        android:onClick="editCategory"
        android:visibility="gone"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="5dp"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:padding="8dp"
        android:gravity="left"
        android:text="1,2,3"
        android:layout_toLeftOf="@id/gradeEditButton"
        android:layout_toRightOf="@id/dashTextView"
        android:background="@android:color/transparent"
        android:textColor="@color/greyText"
        android:textSize="14sp"
        android:textStyle="italic"
        android:id="@+id/gradeTextView"/>

</RelativeLayout>