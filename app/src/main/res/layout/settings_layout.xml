<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/soundsAndVibrationsLayout">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifications"
            android:textColor="@color/black"
            android:layout_marginLeft="-6dp"
            android:textSize="18sp"
            android:id="@+id/notificationsCheckBox"
            android:onClick="notificationsClick"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="20dp"
            android:text="Sounds"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_toRightOf="@id/notificationsCheckBox"
            android:id="@+id/soundsNotificationCheckBox"
            android:onClick="soundsNotificationClick"
            android:visibility="visible"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/soundsNotificationCheckBox"
            android:layout_toRightOf="@id/notificationsCheckBox"
            android:text="Vibrations"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:id="@+id/vibrationsNotificationCheckBox"
            android:onClick="vibrationsNotificationClick"
            android:visibility="visible"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_below="@id/soundsAndVibrationsLayout"
        android:id="@+id/separator1"
        android:visibility="visible"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/themeTextView"
        android:layout_below="@id/separator1"
        android:text="Theme"
        android:textColor="@color/black"/>

    <Spinner
        android:padding="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/themeSpinner"
        android:layout_below="@id/separator1"
        android:layout_toRightOf="@id/themeTextView"
        style="@style/Widget.AppCompat.Spinner.Underlined"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/themeSpinner"
        android:layout_below="@id/separator1"
        android:id="@+id/setThemeButton"
        android:text="Set"
        android:layout_marginTop="-10dp"
        android:onClick="setTheme"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_below="@id/themeSpinner"
        android:id="@+id/separator2"
        android:visibility="visible"
        android:background="@android:color/darker_gray"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/separator2"
        android:text="Delete Everything"
        android:id="@+id/deleteButton"
        android:onClick="deleteAll"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_below="@id/deleteButton"
        android:id="@+id/separator3"
        android:visibility="visible"
        android:background="@android:color/darker_gray"/>

</RelativeLayout>