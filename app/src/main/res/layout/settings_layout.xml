<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkbluebackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/soundsAndVibrationsLayout"
        android:orientation="vertical">

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notifications"
            android:textColor="@color/greyText"
            android:layout_marginBottom="4dp"
            android:textSize="18sp"
            android:id="@+id/notificationsCheckBox"
            android:onClick="notificationsClick"/>

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="20dp"
            android:text="Sounds"
            android:textColor="@color/greyText"
            android:textSize="16sp"
            android:id="@+id/soundsNotificationCheckBox"
            android:onClick="soundsNotificationClick"
            android:visibility="visible"/>

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Vibrations"
            android:textColor="@color/greyText"
            android:textSize="16sp"
            android:id="@+id/vibrationsNotificationCheckBox"
            android:onClick="vibrationsNotificationClick"
            android:visibility="visible"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_below="@id/soundsAndVibrationsLayout"
        android:id="@+id/separator2"
        android:visibility="visible"
        android:background="@color/mainblue"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/separator2"
        android:text="Delete Everything"
        android:id="@+id/deleteButton"
        android:onClick="deleteAll"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_below="@id/deleteButton"
        android:id="@+id/separator3"
        android:visibility="visible"
        android:background="@color/mainblue"/>

</RelativeLayout>