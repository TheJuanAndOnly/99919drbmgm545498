<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#cacaca">

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:id="@+id/subjectDetailToolbar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:elevation="10dp"/>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/subjectDetailToolbar">


        <RelativeLayout
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:layout_margin="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gradeLayout"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grades"
                android:layout_marginBottom="4dp"
                android:id="@+id/gradeTextView"
                style="@style/TextAppearance.AppCompat.Headline"/>

            <Button
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_add_black_24dp"
                android:id="@+id/gradePlusButton"
                android:onClick="addGrade" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="8dp"
                android:text="Average:"
                android:id="@+id/averageTextView"
                android:textColor="@color/grey800"
                android:layout_below="@id/gradeTextView"
                style="@style/TextAppearance.AppCompat.Subhead"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/separatorDetail1"
                android:layout_below="@id/averageTextView"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/categoryListView"
                android:layout_below="@id/separatorDetail1"
                android:divider="@android:color/transparent"
                android:dividerHeight="0.5dp">
            </ListView>

            <Button
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/categoryListView"
                android:background="@drawable/ic_add_black_24dp"
                android:id="@+id/addCategory"
                android:onClick="addCategory"
                android:visibility="gone"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/separatorDetail"
                android:layout_below="@id/addCategory"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/separatorDetail"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grades"
                    android:layout_marginBottom="4dp"
                    android:id="@+id/extrasTextView"
                    android:textSize="20sp"
                    style="@style/TextAppearance.AppCompat.Headline"
                    />

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>

