<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/darker"
        app:theme="@style/ToolBarStyle"
        android:id="@+id/toolbar_head">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/head"
            android:background="@color/darker">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_name"
                android:layout_marginTop="16dp"
                android:layout_marginRight="24dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:inputType="textCapSentences"
                android:singleLine="true"
                android:hint="Add new task"
                android:textColorHint="#64ffffff"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_name"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:id="@+id/rl_switch">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To do"
                    android:layout_toLeftOf="@+id/switch_current"
                    android:layout_centerVertical="true"
                    android:textColor="@color/white"/>

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/switch_current"
                    android:layout_marginLeft="28dp"
                    android:layout_marginRight="28dp"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Done"
                    android:layout_toRightOf="@+id/switch_current"
                    android:layout_centerVertical="true"
                    android:textColor="@color/white"
                    android:gravity="center"/>

            </RelativeLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_body"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:singleLine="true"
                android:layout_marginBottom="12dp"
                android:inputType="textCapSentences"
                android:layout_below="@+id/et_name"
                android:layout_alignLeft="@+id/et_name"
                android:layout_alignRight="@+id/et_name"
                android:hint="What is your task?"
                android:textColorHint="#64ffffff"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:id="@+id/ll_time"
                android:layout_below="@+id/et_body"
                android:layout_alignRight="@id/et_name"
                android:background="@color/darker">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Set time"
                    android:textColor="@color/white"
                    android:id="@+id/btnTime"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"/>

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="@color/white"
                    android:layout_margin="10dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Set date"
                    android:textColor="@color/white"
                    android:id="@+id/btnDate"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"/>
            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_save"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_alignParentRight="true"
                android:text="SAVE"
                android:background="@null"
                android:textColor="@color/white"
                android:layout_below="@+id/ll_time"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_close"
                android:text="CLOSE"
                android:background="@null"
                android:textColor="@color/white"
                android:layout_alignBaseline="@+id/btn_save"
                android:layout_alignBottom="@+id/btn_save"
                android:layout_toLeftOf="@+id/btn_save"
                android:layout_toStartOf="@+id/btn_save" />

        </RelativeLayout>


    </android.support.v7.widget.Toolbar>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lw_tasks"
        android:animateLayoutChanges="true"
        android:layout_below="@+id/toolbar_head"
        android:background="@color/darker"
        android:dividerHeight="0dp"
        android:divider="@null"/>

</RelativeLayout>